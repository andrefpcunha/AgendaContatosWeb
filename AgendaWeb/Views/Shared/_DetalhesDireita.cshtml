
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Sair", "Seguranca", FormMethod.Post, new { id = "SairForm" }))
    {
        <ul class="nav navbar-nav navbar-right">
            <li><a href="@Url.Action("Index","")" class="navbar-nav navbar-right">Olá  < @User.Identity.Name ></a></li>
            <li><a class = "navbar-brand navbar-right" href="javascript:document.getElementById('SairForm').submit()">Sair</a></li>
        </ul>
    }
}
else
{
    @Html.ActionLink("Cadastre-se!", "Novo", "Usuario", routeValues: null, htmlAttributes: new { id = "LinkCadastrar", @class = "navbar-brand navbar-right" })
}